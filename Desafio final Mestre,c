#include <stdio.h> 
#include <stdlib.h>
#include <time.h>

int main() {

    // Dados da Carta 1 
    unsigned long int populacao; 
    int pontos_turisticos; 
    float area; 
    float pib; 
    char codigo[20]; 
    float densidade; 
    float pib_per_capita; 
    float super_poder; 

    // Dados da Carta 2 
    unsigned long int populacao2; 
    int pontos_turisticos2; 
    float area2; 
    float pib2; 
    char codigo2[20]; 
    float densidade2; 
    float pib_per_capita2; 
    float super_poder2; 

    // Informação pré-menu, Switch e If-else
    int opcao; 
  
    printf("Desafio Aula: Super_Trunfo_C_Estacio. \n\n");

    // Inserir dados da PRIMEIRA*1 carta  
    printf("Cadastro, digite o código da primeira cidade: ");
    scanf("%s", codigo); 

    printf("Digite a área desta cidade: "); 
    scanf("%f", &area); 

    printf("Digite a população: ");
    scanf("%lu", &populacao);

    printf("Digite o PIB: ");
    scanf("%f", &pib);

    printf("Digite o número de pontos turísticos: ");
    scanf("%d", &pontos_turisticos);

    //adicionando os relatórios de densidade1 e per capita1 abaixo;
    densidade = populacao / area; 
    pib_per_capita = pib / populacao;     
    super_poder = populacao + area + pib + pontos_turisticos + pib_per_capita + (1.0 / densidade);  

    printf("\n");

    // Inserir dados da SEGUNDA*2 carta  
    printf("Cadastro, digite o código da segunda cidade: ");
    scanf("%s", codigo2); 

    printf("Digite a área desta cidade: "); 
    scanf("%f", &area2); 

    printf("Digite a população: ");
    scanf("%lu", &populacao2);

    printf("Digite o PIB: ");
    scanf("%f", &pib2);

    printf("Digite o número de pontos turísticos: ");
    scanf("%d", &pontos_turisticos2);

    //adicionando os relatórios da segunda densidade2 e per capita2 abaixo;
    densidade2 = populacao2 / area2; 
    pib_per_capita2 = pib2 / populacao2;    
    super_poder2 = populacao2 + area2 + pib2 + pontos_turisticos2 + pib_per_capita2 + (1.0 / densidade2);

    printf("\n\n");

    //Apresentação dos dados da PRIMEIRA*1 carta: 
    printf("Dados inseridos da Primeira Carta\n"); 
    printf("Código: %s\n", codigo); 
    printf("Área: %.2f km²\n", area); 
    printf("População: %lu milhões\n", populacao);
    printf("PIB: %.2f bilhões de reais\n", pib); 
    printf("Pontos Turísticos: %d\n", pontos_turisticos); 
    printf("Densidade Populacional: %.2f hab/km²\n", densidade);
    printf("PIB per Capita: %.2f reais\n", pib_per_capita);
    printf("Super Poder: %.2f\n\n", super_poder); 

    //Apresentação dos dados da SEGUNDA*2 carta:
    printf("Dados inseridos da Segunda Carta\n"); 
    printf("Código: %s\n", codigo2); 
    printf("Área: %.2f km²\n", area2); 
    printf("População: %lu milhões\n", populacao2);
    printf("PIB: %.2f bilhões de reais\n", pib2); 
    printf("Pontos Turísticos: %d\n", pontos_turisticos2); 
    printf("Densidade Populacional: %.2f hab/km²\n", densidade2);
    printf("PIB per Capita: %.2f reais\n", pib_per_capita2);
    printf("Super Poder: %.2f\n\n", super_poder2); 

    // Comparação antes IF-ELSE e agora Operador Ternário 
    printf("Comparação_De_Cartas\n");
    printf("Optado pelo atributo: População\n"); 

    printf("Resultado: %s\n", 
        (populacao > populacao2) ? "Primeira Carta é a vencedora!" :
        (populacao < populacao2) ? "Segunda Carta é a vencedora!" :
                                   "Deram Empate!");

    // MENU - Apresentação de atributos para o jogador. 
    printf("\n### Menu - Escolha seus Atributos ###\n");
    printf("1 - População\n");
    printf("2 - Área\n");
    printf("3 - PIB\n");
    printf("4 - Pontos Turísticos\n");
    printf("5 - Densidade\n");
    scanf("%d", &opcao);

    switch(opcao) {
        case 1: // População
            printf("%s\n", 
                (populacao > populacao2) ? "Carta 1 venceu por maior população!" :
                (populacao2 > populacao) ? "Carta 2 venceu por maior população!" :
                                           (area > area2) ? "Empate na população! Carta 1 venceu pelo desempate de área!" :
                                           (area2 > area) ? "Empate na população! Carta 2 venceu pelo desempate de área!" :
                                                            "Ocorreu Empate!");
            break;

        case 2: // Área
            printf("%s\n", 
                (area > area2) ? "Carta 1 venceu por maior área!" :
                (area2 > area) ? "Carta 2 venceu por maior área!" :
                                 (populacao > populacao2) ? "Empate na área! Carta 1 venceu pelo desempate de população!" :
                                 (populacao2 > populacao) ? "Empate na área! Carta 2 venceu pelo desempate de população!" :
                                                            "Ocorreu Empate!");
            break;

        case 3: // PIB
            printf("%s\n", 
                (pib > pib2) ? "Carta 1 venceu por maior PIB!" :
                (pib2 > pib) ? "Carta 2 venceu por maior PIB!" :
                               (populacao > populacao2) ? "Empate no PIB! Carta 1 venceu pelo desempate de população!" :
                               (populacao2 > populacao) ? "Empate no PIB! Carta 2 venceu pelo desempate de população!" :
                                                          "Ocorreu Empate!");
            break;

        case 4: // Pontos turísticos
            printf("%s\n", 
                (pontos_turisticos > pontos_turisticos2) ? "Carta 1 venceu por mais pontos turísticos!" :
                (pontos_turisticos2 > pontos_turisticos) ? "Carta 2 venceu por mais pontos turísticos!" :
                                                            (pib > pib2) ? "Empate nos pontos turísticos! Carta 1 venceu pelo desempate de PIB!" :
                                                            (pib2 > pib) ? "Empate nos pontos turísticos! Carta 2 venceu pelo desempate de PIB!" :
                                                                           "Ocorreu Empate!");
            break;

        case 5: // Densidade populacional
            printf("%s\n", 
                (densidade < densidade2) ? "Carta 1 venceu por menor densidade populacional!" :
                (densidade2 < densidade) ? "Carta 2 venceu por menor densidade populacional!" :
                                           (populacao > populacao2) ? "Empate na densidade! Carta 1 venceu pelo desempate de população!" :
                                           (populacao2 > populacao) ? "Empate na densidade! Carta 2 venceu pelo desempate de população!" :
                                                                      "Ocorreu Empate!");
            break;

        default:
            printf("Opção inválida!\n");
    }
 
    return 0; 
}
